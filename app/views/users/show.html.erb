<h3>User Dashboard</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>


<h3>Pending Transactions</h3>
	<% @user.transactions.each do |transaction| %>
		<% if not transaction.reimbursed %>
    		Club: <%= transaction.admin.club_name %> Date: <%= transaction.date %> 
    		Amount: <%= transaction.value %> Note: <%= transaction.notes %>
  		<% end %>		
  	<% end %>
<%= link_to "All Transactions", new_path, :class => "button medium" if @user == current_user %>

<h3>Clubs I'm In</h3>
<div class="container">
    <div class="row">
        <table>

          <thead>
            <tr>
              <th>Member ID</th>
              <th>Group ID</th>
            </tr>
          </thead>

          <tbody>
            <% @clubs.each do |club| %>
              <tr>
                <td><%= club.club_name %></td>
<!--                 <td><%= club.id %></td> -->
              </tr>
            <% end %>
        </tbody>

        </table>
    </div>
</div>
<%= link_to "Add Club", new_path, :class => "button medium" if @user == current_user %>